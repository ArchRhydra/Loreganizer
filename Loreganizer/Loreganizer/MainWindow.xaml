<Window
    x:Class="Loreganizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Loreganizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel x:Name="mainPanel">
        <!--  Header Grid  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                BorderThickness="0"
                Content="File"
                Cursor="Hand" />
            <Button
                Grid.Column="1"
                BorderThickness="0"
                Click="TextBoxTool_Button_Click"
                Content="Tools"
                Cursor="Hand" />
            <Rectangle Grid.Column="2" Fill="LightGray" />
            <Button
                Grid.Column="2"
                BorderThickness="0"
                Click="Pan_Button_Click"
                Content="Pan"
                Cursor="Hand" />

            <Button
                Grid.Column="3"
                BorderThickness="0"
                Click="Recenter_Button_Click"
                Content="Recenter"
                Cursor="Hand" />

            <ComboBox
                x:Name="scaleComboBox"
                Grid.Column="4"
                Cursor="Hand"
                SelectedIndex="0"
                SelectionChanged="ScaleComboBox_SelectionChanged">
                <ComboBoxItem Content="Standard" />
                <ComboBoxItem Content="Zoom In" />
                <ComboBoxItem Content="Zoom Out" />
            </ComboBox>


            <Rectangle Grid.Column="5" Fill="LightGray" />
        </Grid>


    </StackPanel>
</Window>
